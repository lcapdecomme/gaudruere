{% extends "GaudruereGiteBundle::layouts/gaudruerebaselayout.html.twig" %}

{% block content %} 
  {% block logocontent %}  <a class="logoadmin" href="{{ path('adminGaudruere') }}"></a>{% endblock %}
<div class="admin">     

  <h2>Réservation</h2>
  

<table class="record_properties">
    <tbody>
        <tr>
            <th>Numéro de réservation</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Du</th>
            <td>{{ entity.dateDebut|date('d/m/Y') }}</td>
        </tr>
        <tr>
            <th>Au</th>
            <td>{{ entity.dateFin|date('d/m/Y') }}</td>
        </tr>
        <tr>
            <th>Validée (O/N)</th>
            <td>{{ entity.reservationValidee }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ entity.titre }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ entity.prenom }}</td>
        </tr>
        <tr>
            <th>Rue</th>
            <td>{{ entity.rue1 }}</td>
        </tr>
        <tr>
            <th></th>
            <td>{{ entity.rue2 }}</td>
        </tr>
        <tr>
            <th></th>
            <td>{{ entity.rue3 }}</td>
        </tr>
        <tr>
            <th>CP</th>
            <td>{{ entity.codePostal }}</td>
        </tr>
        <tr>
            <th>Ville</th>
            <td>{{ entity.ville }}</td>
        </tr>
        <tr>
            <th>Pays</th>
            <td>{{ entity.pays }}</td>
        </tr>
        <tr>
            <th>Nb adultes</th>
            <td>{{ entity.nbAdultes }}</td>
        </tr>
        <tr>
            <th>Nb enfants</th>
            <td>{{ entity.nbEnfants }}</td>
        </tr>
        <tr>
            <th>Nb bébés</th>
            <td>{{ entity.nbBebes }}</td>
        </tr>
        <tr>
            <th>Tél.</th>
            <td>{{ entity.tel }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Commentaire</th>
            <td>{{ entity.commentaire }}</td>
        </tr>
    </tbody>
</table>

 
  <form action="{{ path('adminReservation_delete', { 'id': entity.id }) }}" method="post">
      {{ form_widget(delete_form) }}
      <p>
        <button type="submit" onclick="return confirm('Supprimer cet objet ?');" >Supprimer cette demande de réservation</button>
      </p>
  </form>
  
  <a class="retour" href="{{ path('adminReservation_edit', { 'id': entity.id }) }}">Modifier</a>
  
  <a class="retour" href="{{ path('adminReservation') }}">Retour à la liste des réservations</a>
</div>

              
{% endblock %}